@page
@model TrainingPortal.Pages.Team.AddMemberModel
@{
    ViewData["Title"] = "AddMember";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-4">
        <form method="post" class="form-control"  enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="Member.Name" class="control-label"></label>
                <input asp-for="Member.Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Member.Title" class="control-label"></label>
                <input asp-for="Member.Title" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Member.Description" class="control-label"></label>
                <input asp-for="Member.Description" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Image" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input type="file" asp-for="Image" />
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

