@model IEnumerable<TrainingPortal.Models.Category>

@{
    ViewData["Title"] = "Features";
}

<div class="row justify-content-md-center">
    <h2>Our Features</h2>
</div>


<div class="d-flex flex-wrap">

    @foreach (var item in Model)
    {
        <div class="border col-4">
            <p>
                @item.Title
                <a asp-action="Edit" asp-route-id="@item.CategoryId">
                    <span title="Edit" class="glyphicon glyphicon-pencil" />
                </a>
                <a asp-action="Delete" asp-route-id="@item.CategoryId">
                    <span title="Delete" class="glyphicon glyphicon-trash" />
                </a>
            </p>

            <p>@item.Description</p>

            <a asp-controller="Courses" asp-action="Index" asp-route-id="@item.CategoryId">View Courses</a>
        </div>
    }

    <div class="col-4 align-self-center">
        <a asp-action="Create" class="btn-link">
            <span style="font-size:30px;" title="Add new feature" class="icon glyphicon glyphicon-plus-sign" />
        </a>
    </div>

</div>
