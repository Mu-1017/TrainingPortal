@model IEnumerable<TrainingPortal.Models.Course>

@{
    ViewData["Title"] = "Index";
}

<a asp-action="Create" asp-route-id="@ViewBag.Category.CategoryId">Create New</a>

<div class="d-flex flex-wrap">
    @foreach (var item in Model)
    {
    <div class="d-flex flex-column border col-4" style="min-height: 300px;">
        <h4>@item.Title</h4>
        <div class="embed-responsive embed-responsive-16by9">
            <iframe width="560" height="315" src="@item.GetEmbedSource()" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
        </div>
        <a asp-action="Edit" asp-route-id="@item.CourseId">Edit</a>
        <a asp-action="Delete" asp-route-id="@item.CourseId">Delete</a>
    </div>
    }
</div>

<a asp-controller="Categories" asp-action="Index">Back to Feature Page</a>
